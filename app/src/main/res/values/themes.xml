<resources>

    <style name="Theme.Applicationtracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">@bool/status_icon_color</item>
        <item name="android:windowBackground">@color/window_background</item>

        <item name="snackbarStyle">@style/Snackbar</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextStyle</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/card_color</item>
        <item name="colorOnSurface">@color/dark_text</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <!-- Text Styles -->
    <style name="PageHeaderTextStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">0.75</item>
    </style>
    <style name="Title">
        <item name="android:fontFamily">@font/montserrat_black</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Heading">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SubHeading">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Body">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>
    <style name="Caption">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Button Styles -->
    <style name="FilledButton">
        <item name="android:background">@drawable/card_background</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <!-- Snackbar Style -->
    <style name="Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">24dp</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:backgroundTint">@color/card_color</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="SnackbarTextStyle" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Bottom Navigation View -->
    <style name="BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="background">@null</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationText</item>
        <item name="itemIconTint">@color/bottom_navigation_tint</item>
        <item name="itemTextColor">@color/bottom_navigation_tint</item>
    </style>
    <style name="BottomNavigationText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_navigation_tint</item>
    </style>

    <style name="SearchHintTextStyle">
        <item name="hintTextAppearance">@style/SearchHintTextAppearance</item>
    </style>
    <style name="SearchHintTextAppearance">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <!-- Popup Menu -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemTextAppearance">@style/Body</item>
        <item name="popupMenuBackground">@color/bottom_navigation_bar</item>
        <item name="android:popupElevation">16dp</item>
        <item name="android:listDivider">@color/light_text</item>
    </style>
    
    <!-- Alert Dialog -->
    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>
    <style name="AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/bottom_navigation_bar</item>
        <item name="colorOnSurface">@color/dark_text</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.TitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button</item>
    </style>

</resources>