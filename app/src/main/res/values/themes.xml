<resources>

    <style name="Theme.Applicationtracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">@bool/status_icon_color</item>
        <item name="android:windowBackground">@color/window_background</item>

        <item name="snackbarStyle">@style/Snackbar</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextStyle</item>

        <item name="actionOverflowButtonStyle">@style/MenuButtonStyle</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/card_color</item>
        <item name="colorOnSurface">@color/dark_text</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <!-- Text Styles -->
    <style name="AppTextRegular">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="AppTextBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="AppTextBlack">
        <item name="android:fontFamily">@font/montserrat_black</item>
    </style>
    <style name="PageHeaderTextStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">0.75</item>
    </style>
    <style name="Title" parent="AppTextBlack">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">@dimen/text_display</item>
    </style>
    <style name="Heading" parent="AppTextBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">@dimen/text_heading</item>
    </style>
    <style name="Body" parent="AppTextRegular">
        <item name="android:textSize">@dimen/text_body1</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>
    <style name="Body2" parent="AppTextBold">
        <item name="android:textSize">@dimen/text_body2</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>
    <style name="Caption" parent="AppTextBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Button Styles -->
    <style name="AppButton">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/text_body2</item>
        <item name="minHeight">48dp</item>
        <item name="android:background">@drawable/bg_round_corners</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="FilledButton" parent="AppButton">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="FilledTonalButton" parent="AppButton">
        <item name="android:textColor">#FF03847C</item>
        <item name="backgroundTint">@color/tonal_button_color</item>
        <item name="android:stateListAnimator">"@null"</item>
    </style>
    <style name="TextButton" parent="AppButton">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:drawableTint">@color/dark_text</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    
    <!-- Snackbar Style -->
    <style name="Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">24dp</item>
        <item name="android:background">@drawable/snackbar_background</item>
        <item name="android:backgroundTint">@color/snackbar_color</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="SnackbarTextStyle" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Bottom Navigation View -->
    <style name="BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="background">@null</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationText</item>
        <item name="itemIconTint">@color/bottom_navigation_tint</item>
        <item name="itemTextColor">@color/bottom_navigation_tint</item>
    </style>
    <style name="BottomNavigationText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_navigation_tint</item>
    </style>

    <!-- Edit Text Style -->
    <style name="FilledBoxEditText">
        <item name="android:background">@drawable/card_background</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="hintTextColor">@color/light_text</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchHintTextStyle">
        <item name="hintTextAppearance">@style/SearchHintTextAppearance</item>
    </style>
    <style name="SearchHintTextAppearance">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <!-- Popup Menu -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemTextAppearance">@style/Body</item>
        <item name="popupMenuBackground">@drawable/bg_spinner</item>
        <item name="android:popupElevation">16dp</item>
        <item name="android:listDivider">@color/divider_color</item>
    </style>
    
    <!-- Alert Dialog -->
    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AlertDialog.MessageText">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/text_body1</item>
        <item name="android:textColor">@color/light_text</item>
    </style>
    <style name="AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="AlertDialog.IconTint" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">@color/dark_text</item>
    </style>
    <style name="AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/bottom_navigation_bar</item>
        <item name="colorOnSurface">@color/dark_text</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.TitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.MessageText</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button</item>
        <item name="materialAlertDialogTitleIconStyle">@style/AlertDialog.IconTint</item>
    </style>

    <!-- Spinner Style -->
    <style name="SpinnerStyle" parent="android:Widget.Material.Spinner.Underlined">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:popupBackground">@drawable/bg_spinner</item>
    </style>

    <!-- Menu button style -->
    <style name="MenuButtonStyle">
        <item name="android:background">@drawable/bg_round_button</item>
        <item name="android:backgroundTint">@color/card_color</item>
        <item name="android:src">@drawable/ic_menu</item>
        <item name="tint">@color/dark_text</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

</resources>