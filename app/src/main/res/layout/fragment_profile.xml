<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature_user.ui.profile.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/window_background"
            app:menu="@menu/fragment_profile_menu" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/margin_screen_vertical"
            android:paddingHorizontal="@dimen/margin_screen_horizontal"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardBackgroundColor="@color/card_color"
                    app:cardElevation="0dp" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/anonymous_user_dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/content_desc_user_dp" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Details"
                    style="@style/Caption" />

                <com.studbudd.application_tracker.common.ui.views.InformationTextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:keyText="Name"
                    app:endIconVisibility="false"
                    app:valueText="Kartik Pant" />

                <com.studbudd.application_tracker.common.ui.views.InformationTextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:keyText="Email"
                    app:valueText="pantkartik23@gmail.com"
                    app:endIconVisibility="false"
                    android:layout_marginTop="2dp" />

                <com.studbudd.application_tracker.common.ui.views.InformationTextView
                    android:id="@+id/user_joined_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:keyText="Joined On"
                    app:valueText="23 December, 2022"
                    app:endIconVisibility="false"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    style="@style/Caption" />

                <com.studbudd.application_tracker.common.ui.views.InformationTextView
                    android:id="@+id/theme_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:keyText="Mode"
                    app:endIconVisibility="true"
                    app:valueText="System Default" />

                <com.studbudd.application_tracker.common.ui.views.InformationTextView
                    android:id="@+id/user_placeholders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:keyText="Placeholders"
                    app:valueText="Edit"
                    app:endIconVisibility="true"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>