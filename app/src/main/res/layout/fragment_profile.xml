<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature_user.ui.profile.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@color/window_background"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/window_background"
            app:popupTheme="@style/PopupMenuStyle" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_screen_vertical"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardBackgroundColor="@color/card_color"
                    app:cardElevation="0dp" >
                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/anonymous_user_dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/content_desc_user_dp" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_details_header"
                    style="@style/Caption" />

                <com.studbudd.application_tracker.core.ui.views.InformationTextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:keyText="Name"
                    app:endIconVisibility="false"
                    app:valueText="Kartik Pant" />

                <com.studbudd.application_tracker.core.ui.views.InformationTextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:keyText="Email"
                    app:valueText="pantkartik23@gmail.com"
                    app:endIconVisibility="false"
                    android:layout_marginTop="4dp" />

                <com.studbudd.application_tracker.core.ui.views.InformationTextView
                    android:id="@+id/user_joined_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:keyText="Joined On"
                    app:valueText="23 December, 2022"
                    app:endIconVisibility="false"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_header"
                    style="@style/Caption" />

                <com.studbudd.application_tracker.core.ui.views.InformationTextView
                    android:id="@+id/theme_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:keyText="Mode"
                    app:endIconVisibility="true"
                    app:valueText="System Default" />

                <com.studbudd.application_tracker.core.ui.views.InformationTextView
                    android:id="@+id/user_placeholders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:keyText="Placeholders"
                    app:valueText="Edit"
                    app:endIconVisibility="true"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_google_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="32dp"
                android:background="@drawable/card_background"
                android:backgroundTint="@color/card_color"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/google_sign_in_layout_header"
                    style="@style/Heading"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/google_sign_in_layout_text"
                    android:textAlignment="center"
                    android:textColor="@color/light_text"
                    style="@style/Body" />

                <Button
                    android:id="@+id/google_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    style="@style/FilledButton"
                    app:backgroundTint="@color/blue_button_color"
                    android:text="@string/google_signin_button_text" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>