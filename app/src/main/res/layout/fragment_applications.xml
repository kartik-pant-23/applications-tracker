<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature_applications.ui.home.ApplicationsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingEnd="48dp"
            android:background="@drawable/bg_round_corners"
            android:backgroundTint="@color/card_color"
            android:drawableStart="@drawable/ic_search"
            android:drawableTint="@color/dark_text"
            android:drawablePadding="12dp"
            android:hint="@string/hint_search_applications"
            style="@style/Body" />
        <ImageView
            android:id="@+id/filter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_round_button"
            android:src="@drawable/ic_filter"
            app:tint="@color/dark_text" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/applications_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        tools:listitem="@layout/item_application"
        tools:itemCount="3" />

    <include
        android:id="@+id/no_applications_layout"
        layout="@layout/empty_applications_list"
        android:visibility="gone" />

</LinearLayout>