<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_marginHorizontal="@dimen/margin_large"
    android:layout_marginVertical="@dimen/margin"
    app:cardBackgroundColor="@color/card_color"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/item_application_padding_vertical"
        android:paddingHorizontal="@dimen/item_application_padding_horizontal">

        <TextView
            android:id="@+id/application_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/dark_text"
            android:textStyle="bold"
            tools:text="Meta - Frontend Engineer"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:background="@drawable/bg_round_button"
            tools:backgroundTint="#80FF80"
            tools:text="Applied"
            android:textAllCaps="true"
            android:textColor="#1F2933"
            android:fontFamily="@font/montserrat"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/light_text"
            tools:text="@tools:sample/lorem/random"
            android:layout_marginVertical="@dimen/margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/application_created_at"
            android:background="@drawable/bg_round_button"
            android:layout_gravity="end"
            tools:text="15 December, 2021 05:15PM"
            android:fontFamily="@font/montserrat"
            android:textSize="11sp"
            android:textColor="#EFEFEF"
            android:textStyle="bold"
            android:backgroundTint="#4E6479" />

    </LinearLayout>

</androidx.cardview.widget.CardView>