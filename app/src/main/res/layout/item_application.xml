<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/company_logo_container"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_spinner"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/company_logo_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:contentDescription="@string/content_description_company_logo" />

        <TextView
            android:id="@+id/company_logo_text"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="24sp"
            android:textColor="@color/dark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            tools:text="G" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/company_details_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/application_status"
        app:layout_constraintStart_toEndOf="@id/company_logo_container"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/company_name"
            style="@style/Body"
            android:textColor="@color/light_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="@dimen/text_small"
            tools:text="Google" />

        <TextView
            android:id="@+id/job_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body2"
            android:textSize="@dimen/text_body2"
            tools:text="Software Development Engineer" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/application_status"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/created_at_container"
        app:layout_constraintBottom_toBottomOf="@id/created_at_container"
        app:layout_constraintEnd_toStartOf="@id/created_at_container"
        tools:background="#f0f"/>

    <LinearLayout
        android:id="@+id/created_at_container"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/create_at_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="21"
            style="@style/Heading" />

        <TextView
            android:id="@+id/create_at_month_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            tools:text="Jan, 2023"
            style="@style/Body"
            android:textColor="@color/light_text"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>